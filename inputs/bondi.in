<comment>
problem = Bondi accretion

<job>
problem_id = bondi

<parthenon/mesh>
refinement = none
nghost = 3

nx1 = 2048
x1min = 1e-2
x1max = 100
ix1_bc = outflow
ox1_bc = outflow

nx2 = 1
x2min = -0.5
x2max = 0.5
ix2_bc = outflow
ox2_bc = outflow

nx3 = 1
x3min = -0.5
x3max = 0.5
ix3_bc = outflow
ox3_bc = outflow

<parthenon/meshblock>
nx1 = 2048
nx2 = 1
nx3 = 1

<parthenon/time>
integrator = vl2
cfl = 0.4
tlim = 1.0
nlim = -1
perf_cycle_offset = 2 # number of inital cycles not to be included in perf calc

<hydro>
fluid = glmmhd
eos = adiabatic
riemann = hlld
reconstruction = ppm
gamma = 1.1 # gamma = C_p/C_v
first_order_flux_correct = true

<parthenon/output0>
file_type = hdf5
dt = 0.01
id = prim
variables = prim

<parthenon/output1>
file_type = hst
dt = 0.1

<units> # Units such that rho_infty is 1, cs_infty is 1, Mbh is 1
code_length_cgs = 2.70916404670302e+17  # Bondi units in cm
code_mass_cgs = 1.98840987069805e+34    # Bondi units in g
code_time_cgs = 2.70916404670302e+11    # Bondi units in s

<problem/bondi>
rho_infty_cgs = 1e-18                   # cgs
ur_infty_cgs = 1                        # cgs
cs_infty_cgs = 1e6                      # cgs
mbh  = 1                                # Msun

